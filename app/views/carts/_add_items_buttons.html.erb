<div class="flex flex-wrap gap-4 pt-10">
  <% Product.all.each do |product| %>
    <div class="flex flex-col border p-4 rounded-lg shadow w-full sm:w-1/2 md:w-1/3 lg:w-1/4">
      <img src="<%= product.image_url %>" class="h-32 w-full object-contain mb-2">
      <h3 class="font-semibold mb-1"><%= product.title %></h3>
      <%= button_to "Add to Cart", cart_carts_products_path(product_id: product.id, cart_id: cart.id), method: :post, data: { turbo_stream: true }, class: "bg-green-600 text-white px-4 py-2 rounded" %>
    </div>
  <% end %>
</div>
