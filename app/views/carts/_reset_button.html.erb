<%= turbo_frame_tag "reset_button" do %>
  <% if cart.carts_products.any? %>
    <%= button_to "Reset", cart_path, method: :delete, params: { cart_id: cart.id }, form: { data: { turbo_stream: true, turbo_confirm: "Are you sure you want to reset the cart?" } }, class: "text-gray-500 hover:text-gray-800 cursor-pointer" %>
  <% else %>
    <div></div>
  <% end %>
<% end %>
