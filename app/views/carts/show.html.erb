<div class="w-full">
  <div class="inline-flex items-center justify-between w-full">
    <h1 class="text-4xl">Cart</h1>
    <% if @cart.carts_products.any? %>
      <p class="text-gray-500 hover:text-gray-800 cursor-pointer">Reset</p>
    <% end %>
  </div>

  <% if @cart.carts_products.any? %>
    <div class="flex flex-col">
      <% @cart.carts_products.each do |carts_product| %>
        <div id="<%= dom_id carts_product %>" class="flex flex-row py-5 max-h-40 border-b border-gray-200">
          <div class="flex basis-1/4 justify-center"><img class="max-h-32 w-auto object-contain" src="<%= carts_product.image_url %>"></div>
          <div class="flex basis-1/4 items-center justify-start"><%= carts_product.title %></div>

          <div class="flex basis-1/4 items-center justify-center">
            <div class="flex items-center gap-4 bg-gray-50 rounded-md px-1 py-1">
              <button class="text-gray-600 hover:text-gray-800 font-bold text-2xl cursor-pointer px-2">-</button>
              <span class="text-gray-800 text-xl"><%= carts_product.quantity %></span>
              <button class="text-gray-600 hover:text-gray-800 font-bold text-xl cursor-pointer px-2">+</button>
            </div>
          </div>

          <div class="flex basis-1/4 items-center justify-end font-bold relative">
            <button class="absolute top-0 right-0 text-gray-400 hover:text-gray-800 cursor-pointer">
              <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
              </svg>
            </button>
            $<%= carts_product.price %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 w-full border border-gray-300 rounded-lg p-4 flex justify-between items-center">
      <span class="font-bold text-lg">Total</span>
      <span class="font-bold text-2xl">$<%= @cart.carts_products.sum { it.price * it.quantity } %></span>
    </div>

    <div class="mt-8 w-full">
      <button class="w-full bg-green-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-500 transition-all duration-200">
        Place Order
      </button>
    </div>
  <% else %>
    <div class="flex flex-col items-center justify-center text-center py-12 text-gray-500 min-h-[50vh] sm:min-h-[60vh] lg:min-h-[70vh]">
      <img src="open-box-icon.png" class="w-12 h-12">
      <p class="mt-4 mb-2 text-2xl font-semibold text-gray-700">The cart is empty</p>
      <p class="text-gray-500 text-sm">Add items from the catalog</p>
    </div>
  <% end %>
</div>
