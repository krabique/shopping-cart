<% content_for :title, "Showing cart" %>

<div class="w-full">
  <div class="inline-flex items-center justify-between w-full">
    <h1 class="text-4xl">Cart</h1>
    <p class="text-gray-500">Reset</p>
  </div>

  <div class="flex flex-col">
    <% @cart.carts_products.each do |carts_product| %>
      <div id="<%= dom_id carts_product %>" class="flex flex-row py-5 max-h-40 border-b border-gray-200">
        <div class="flex basis-1/4 justify-center"><img class="max-h-32 w-auto object-contain" src="<%= carts_product.image_url %>"></div>
        <div class="flex basis-1/4 items-center justify-start"><%= carts_product.title %></div>

        <div class="flex basis-1/4 items-center justify-center">
          <div class="flex items-center gap-4 bg-gray-50 rounded-md px-3 py-1">
            <button class="text-gray-600 hover:text-gray-800 font-bold text-xl cursor-pointer">-</button>
            <span class="text-gray-800 text-xl"><%= carts_product.quantity %></span>
            <button class="text-gray-600 hover:text-gray-800 font-bold text-xl cursor-pointer">+</button>
          </div>
        </div>

        <div class="flex basis-1/4 items-center justify-end font-bold">$<%= carts_product.price %></div>
      </div>
    <% end %>
  </div>

  <div class="mt-8 w-full border border-gray-300 rounded-lg p-4 flex justify-between items-center">
    <span class="font-bold text-lg">Total</span>
    <span class="font-bold text-2xl">$<%= @cart.carts_products.sum { it.price * it.quantity } %></span>
  </div>

  <div class="mt-8 w-full">
    <button class="w-full bg-green-600 text-white font-bold py-3 px-6 rounded-lg hover:bg-green-500 transition-all duration-200">
      Place Order
    </button>
  </div>
</div>
